{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Padel API - Documentation",
  "colors": {
    "primary": "#818cf8",
    "light": "#818cf8",
    "dark": "#4f46e5"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "README",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "https://padelapi.org/docs/api.json"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://padelapi.org",
          "icon": "home"
        },
        {
          "anchor": "Blog",
          "href": "https://fantasypadeltour.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": "/favicon.ico",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:ferran@padelapi.org"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Access Padel API",
      "href": "https://padelapi.org/explore"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/ferranfg/padelapi.org",
      "website": "https://padelapi.org"
    }
  },
  "description": "First-ever API for professional padel data. Get access to the latest padel player stats, rankings, and more.",
  "appearance": {
    "strict": true,
    "default": "dark"
  },
  "integrations": {
    "plausible": {
      "domain": "padelapi.org",
      "server": "plausible.padelapi.org"
    }
  },
  "background": {
    "color": {
      "dark": "#101827"
    }
  }
}
